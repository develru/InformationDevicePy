<DeviceLayout>:
    rows: 2
    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Action Bar'
                with_previous: False
            ActionOverflow:
            ActionButton:
                text: 'Quit'
                on_press: app.stop()
    GridLayout:
        cols: 2
        BoxLayout:
            orientation: 'vertical'
            Image:
                source: './resources/weather_img/' + root.icon_id + '.png'
            Label:
                text: root.current_temp + ' Celsius'
            Label:
                text: '(' + root.max_temp + ' Celsius / ' + root.min_temp + ' Celsius)'
            Label:
                text: root.city
        Label:
            text: 'Second'
